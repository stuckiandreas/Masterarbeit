<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VersionManagement.Views.InputViews"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" x:Class="VersionManagement.Views.InputViews.DateTimeInputView"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <DockPanel LastChildFill="True">
        <Label  Content="{Binding Label}" Height="25" MinWidth="100" DockPanel.Dock="Left"/>
        <dxe:DateEdit DateTime="{Binding DateTimeInput, UpdateSourceTrigger=PropertyChanged}" Height="25" ShowToday ="True"/>
    </DockPanel>

</UserControl>
