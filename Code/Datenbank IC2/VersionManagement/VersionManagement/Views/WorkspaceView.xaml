<UserControl xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"   
             x:Class="VersionManagement.Views.WorkspaceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VersionManagement.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <dxlc:DockLayoutControl Background="LightGray">
        <ContentControl Content="{Binding DetailedInformationViewModel}" dxlc:DockLayoutControl.Dock="Top" MaxHeight="500"/>
        <ContentControl Content="{Binding DatabaseDataGridViewModel}" MinHeight="200"/>
    </dxlc:DockLayoutControl>

</UserControl>
