<UserControl x:Class="ETIC2.Views.MenuViews.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ETIC2.Views.MenuViews"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Menu DockPanel.Dock="Top" Height="25">
        <MenuItem Header="Program">
            <MenuItem Header="Settings" HorizontalAlignment="Left" Width="180" Command="{Binding SettingsCommand}"/>
            <MenuItem Header="Improvements" HorizontalAlignment="Left" Width="180" Command="{Binding ImprovementsCommand}"/>
            <MenuItem Header="Exit" HorizontalAlignment="Left" Width="180" Command="{Binding ExitCommand}"/>
        </MenuItem>
        <MenuItem Header="Help">
            <MenuItem Header="About" HorizontalAlignment="Left" Command="{Binding AboutCommand}"/>
        </MenuItem>
    </Menu>
    
</UserControl>
